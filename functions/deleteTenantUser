import { createClientFromRequest } from 'npm:@base44/sdk@0.7.1';

const SUPER_ADMIN_EMAIL = 'discgoguy@gmail.com';

Deno.serve(async (req) => {
    try {
        const base44 = createClientFromRequest(req);
        
        // Verify the requesting user is the super admin
        const user = await base44.auth.me();
        
        if (!user || user.email !== SUPER_ADMIN_EMAIL) {
            return Response.json({ 
                error: 'Access denied. Super admin privileges required.' 
            }, { status: 403 });
        }

        const body = await req.json();
        const { userId, userEmail } = body;

        if (!userId) {
            return Response.json({ 
                error: 'User ID is required' 
            }, { status: 400 });
        }

        // Delete user with service role
        await base44.asServiceRole.entities.User.delete(userId);

        return Response.json({ 
            success: true,
            message: `User ${userEmail || userId} deleted successfully`
        });

    } catch (error) {
        console.error('Error deleting tenant user:', error);
        return Response.json({ 
            error: error.message || 'Failed to delete user' 
        }, { status: 500 });
    }
});